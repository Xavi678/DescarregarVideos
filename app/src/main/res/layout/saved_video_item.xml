<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tbxSavedVideoDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="110dp"
        android:maxWidth="270dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/savedVideoButtonMenuOptions"
        app:layout_constraintStart_toEndOf="@id/relativeImgSavedVideo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeImgSavedVideo"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/imageViewPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/videoDuration"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:background="@color/black"
            android:text="3:50"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewPlaylist"
            app:layout_constraintLeft_toLeftOf="@+id/imageViewPlaylist"

            />
        <ImageButton
            android:id="@+id/playButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/play_button_rect_mod"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewPlaylist"
            app:layout_constraintTop_toTopOf="@+id/imageViewPlaylist"
            app:layout_constraintStart_toStartOf="@+id/imageViewPlaylist"
            app:layout_constraintEnd_toEndOf="@+id/imageViewPlaylist"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/savedVideoButtonMenuOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/three_dots"
        android:background="@android:color/transparent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>